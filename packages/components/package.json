{
  "name": "@jsx-email/components",
  "version": "0.0.8",
  "description": "All react-email components",
  "sideEffects": false,
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/**"
  ],
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    }
  },
  "license": "MIT",
  "scripts": {
    "build": "tsup src/index.ts --format esm,cjs --dts --external react",
    "clean": "rm -rf dist",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch",
    "format:check": "prettier --check \"**/*.{ts,tsx,md}\"",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/resendlabs/react-email.git",
    "directory": "packages/components"
  },
  "keywords": [
    "react",
    "email"
  ],
  "engines": {
    "node": ">=16.0.0"
  },
  "peerDependencies": {
    "react": "^18.2.0"
  },
  "dependencies": {
    "@jsx-email/body": "workspace:*",
    "@jsx-email/button": "workspace:*",
    "@jsx-email/column": "workspace:*",
    "@jsx-email/container": "workspace:*",
    "@jsx-email/font": "workspace:*",
    "@jsx-email/head": "workspace:*",
    "@jsx-email/heading": "workspace:*",
    "@jsx-email/hr": "workspace:*",
    "@jsx-email/html": "workspace:*",
    "@jsx-email/img": "workspace:*",
    "@jsx-email/link": "workspace:*",
    "@jsx-email/markdown": "workspace:*",
    "@jsx-email/preview": "workspace:*",
    "@jsx-email/render": "workspace:*",
    "@jsx-email/row": "workspace:*",
    "@jsx-email/section": "workspace:*",
    "@jsx-email/tailwind": "workspace:*",
    "@jsx-email/text": "workspace:*"
  },
  "publishConfig": {
    "access": "public"
  }
}
