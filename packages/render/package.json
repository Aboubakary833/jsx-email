{
  "name": "@jsx-email/render",
  "version": "0.0.7",
  "description": "Transform React components into HTML email templates",
  "sideEffects": false,
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/**"
  ],
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    }
  },
  "license": "MIT",
  "scripts": {
    "build": "tsup src/index.ts --format esm,cjs --dts --external react",
    "clean": "rm -rf dist"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/resendlabs/react-email.git",
    "directory": "packages/render"
  },
  "keywords": [
    "react",
    "email"
  ],
  "engines": {
    "node": ">=16.0.0"
  },
  "dependencies": {
    "html-to-text": "9.0.5",
    "pretty": "2.0.0",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@types/html-to-text": "^9.0.1",
    "@types/pretty": "^2.0.1"
  }
}
